---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
---

<PageLayout meta={{ title: 'Join the Waitlist' }}>
	<Section>
		<div class='flex w-full flex-col items-center gap-y-10 text-center text-white max-w-3xl mx-auto text-primary'>
			<h1 class='text-5xl font-bold'>Join Waitlist</h1>
			
			<div class='w-full max-w-md border border-gray-600 rounded-3xl p-8'>
				<form class='flex flex-col gap-y-6'>
					<input
						type='email'
						placeholder='Enter your email address'
						class='w-full rounded-xl border border-gray-600 px-4 py-3 text-gray-200 placeholder-gray-400 focus:border-gray-500 focus:outline-none'
						required
					/>
					<button
						type='submit'
						class='rounded-xl border bg-white px-4 py-3 font-semibold text-gray-900 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800'
					>
						Submit
					</button>
				</form>
				<p class='mt-6 text-sm text-gray-400'>
					By signing up, you agree to our Terms of Service and Privacy Policy.
				</p>
			</div>
		</div>
	</Section>
</PageLayout>

